<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <div>
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div>
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<tr>
<tb><%= link_to "show" , book_path(@book.id)%></tb>
<tb>|</tb>
<tb><%= link_to "Back" , books_path%></tb>
</tr>
